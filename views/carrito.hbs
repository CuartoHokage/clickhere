<div class="container">
    {{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.item.title }}</strong><br />
                    <em>{{{this.item.PRDNOMBRE}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    Cantidad: {{ this.quantity }}
                </div>
                <div class="col-xs-3 text-right">
                    ${{ this.PRDPVP }}
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Borrar</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: $ {{ totalPrice }} </strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Confirmar</a>
    </div>
    {{ else }}
    Tu carrito de pedidos esta vac√≠o.
    {{/if}}
</div>