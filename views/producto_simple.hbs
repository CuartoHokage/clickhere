<div class="container">
    <div class="card">
        <div class="container-fluid">
            {{#if data}}

            <div class="wrapper row">
                <div class="preview col-md-6">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img width="350" height="350" class="img-portfolio" src="/imagenes/{{data.PRDIDENTI}}.png" /></div>
                        
                        <div class="tab-pane" id="pic-2"><img width="350" height="350" class="img-portfolio" src="/imagenes/{{data.PRDIDENTI}}_{{data.contador}}.png" /></div>
                        
                        
                        <div class="tab-pane" id="pic-3"><img src="/imagenes/4141.png" /></div>
                        <div class="tab-pane" id="pic-4"><img src="/imagenes/2185.png" /></div>
                        <div class="tab-pane" id="pic-5"><img src="/imagenes/2185.png" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        <li class="active"><a data-target="#pic-1" data-toggle="tab"><img
                                    src="/imagenes/{{data.PRDIDENTI}}.png" /></a></li>
                        <li><a data-target="#pic-2" data-toggle="tab"><img  class="img-portfolio" src="/imagenes/{{data.PRDIDENTI}}_{{data.contador}}.png" /></a></li>

                    </ul>

                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">{{data.PRDNOMBRE}}</h3>

                    <p class="product-description">{{data.PRDNOMBRE}}</p>
                    <h4 class="price">Precio: <span>${{data.PRDPVP}}</span></h4>
                    <h5 class="sizes">STOCK:
                        <span class="size" data-toggle="tooltip" title="small">{{data.PUBSTOCK}}</span>
                    </h5>

                    <div class="action">
                       <a href="/api/add6/{{ data.PRDIDENTI }}" id="{{this.categorias}}"
                                    class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart"
                                        aria-hidden="true"></i> AÃ±adir al carrito</a>
                    </div>
                </div>
            </div>
            {{else}}
            <p>No se encontraron productos.</p>
            {{/if}}
        </div>
    </div>
</div>