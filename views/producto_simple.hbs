<div class="container">
    <div class="card box style1">

        {{#if data}}

        <div class="row">
            <div class="preview col-md-6">

                <div class="preview-pic tab-content">
                    <div class="tab-pane active " id="pic-0"><img onerror="this.src='/imagenes/sin_imagen.jpg';"
                            width="350" height="350" class="img-portfolio" src="/imagenes/{{data.PRDIDENTI}}.png" />
                    </div>
                    {{#each data.contador}}
                    <div class="tab-pane" id="pic-{{this}}"><img width="350" height="350" class="img-portfolio"
                            src="/imagenes/{{../data.PRDIDENTI}}_{{this}}.png" /></div>
                    {{/each}}
                </div>
                <ul class="preview-thumbnail nav nav-tabs">
                    <li class="active"><a data-target="#pic-0" data-toggle="tab"><img class="img-portfolio"
                                onerror="this.src='/imagenes/sin_imagen.jpg';"
                                src="/imagenes/{{data.PRDIDENTI}}.png" /></a></li>
                    {{#each data.contador }}

                    <li><a data-target="#pic-{{this}}" data-toggle="tab"><img class="img-portfolio"
                                src="/imagenes/{{../data.PRDIDENTI}}_{{this}}.png" /></a></li>
                    {{/each}}
                </ul>

            </div>
            <div class="details col-md-6">
                <h3 class="product-title">{{data.PRDNOMBRE}}</h3>

                <p class="product-description">{{data.PRDNOMBRE}}</p>
                <h4 class="price">Precio: <span>${{decimal data.PRDPVP}}</span></h4>
                <h5 class="sizes">STOCK:
                    <span class="size" data-toggle="tooltip" title="small">{{data.PUBSTOCK}}</span>
                </h5>

                <div class="action">
                    <a href="/api/add6/{{ data.PRDIDENTI }}" id="{{this.categorias}}" class="btn btn-default pull-right"
                        role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> AÃ±adir al carrito</a>
                </div>
            </div>
        </div>
        {{else}}
        <p>No se encontraron productos.</p>
        {{/if}}

    </div>
</div>