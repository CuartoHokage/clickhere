<body>
    <br>
    <br>
    <div class="container">
        <div id="contenido" class="">
            <div class="container">
        <h3>Buscar productos para subir imágenes</h3>
        <form action="/api/coincidenciaadmin" method="post" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" id="busqueda" name="buscar" type="search" placeholder="Buscar"
                aria-label="Search">
            <button type="submit" id="btnconsultar3" class="btn btn-outline-warning"><i class="fa fa-search"
                    style="color: #f80;"></i></button>
        </form>
    </div>
    <hr>
            <div class="row">
                {{#each data}}


                <div class="col-md-4 product-block" id="{{this.PRDIDENTI}}">
                    <section class="box style1">

                        <div class="main-category-image">
                            <img onerror="this.src='/imagenes/sin_imagen.jpg';" class="thumbnail img-portfolio img-hover mb-3" src="/imagenes/{{this.PRDIDENTI}}.png"
                                width="200" height="200">
                            <div class="caption">
                                <div><strong>Código: </strong> {{this.PRDIDENTI}}</div>
                                <h5 class="alienar"> <strong>Descripcion: </strong> {{this.PRDNOMBRE}}</h5>
                                
                                <div class="price-mob"><strong>Precio Efectivo: </strong>$ {{this.Precio_sin_IVA}}</div>
                                <div class="price-mob"><strong>Precio con IVA: </strong>$ {{this.PRDPVP}}</div>
                                <div class="price-mob"><strong>Stock: </strong>{{this.PUBSTOCK}}</div>
                                <form action="/api/upload_productos" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label for="picture">Imagen del producto</label>
                                        <input type="file" class="form-control-file" name="picture" id="picture" value="{{this.PRDIDENTI}}">
                                        <input type="hidden" name="id_imagen" value="{{this.PRDIDENTI}}">
                                        <p id="texto"> </p><br />
                                        
                                    </div>
                                    <button type="submit" class="btn btn-primary" id="guardar">Guardar imagen</button>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
                {{/each}}

            </div>

        </div>
    </div>